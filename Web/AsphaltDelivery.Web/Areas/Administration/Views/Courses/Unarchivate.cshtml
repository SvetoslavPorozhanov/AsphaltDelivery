@model AsphaltDelivery.Web.ViewModels.Courses.CourseUnarchivateInputModel

@{
    ViewData["Title"] = "Unarchivate";
}

<h1>Unarchivate course</h1>

<hr />

<form asp-action="Unarchivate">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="UnarchivateFromYear" class="control-label"></label>
        <input asp-for="UnarchivateFromYear" class="form-control" placeholder="yyyy" />
        <span asp-validation-for="UnarchivateFromYear" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UnarchivateToYear" class="control-label"></label>
        <input asp-for="UnarchivateToYear" class="form-control" placeholder="yyyy" />
        <span asp-validation-for="UnarchivateToYear" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Unarchivate" class="btn btn-warning" />
    </div>
</form>

<div>
    <a class="btn btn-info" asp-area="" asp-action="All">Back to List</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

