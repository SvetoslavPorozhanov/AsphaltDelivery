@model AsphaltDelivery.Web.ViewModels.Courses.CourseArchivateInputModel

@{
    ViewData["Title"] = "Archivate";
}

<h1>Archivate course</h1>

<hr />

<form asp-action="Archivate">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="ArchivateFromYear" class="control-label"></label>
        <input asp-for="ArchivateFromYear" class="form-control" placeholder="yyyy" />
        <span asp-validation-for="ArchivateFromYear" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ArchivateToYear" class="control-label"></label>
        <input asp-for="ArchivateToYear" class="form-control" placeholder="yyyy" />
        <span asp-validation-for="ArchivateToYear" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Archivate" class="btn btn-warning" />
    </div>
</form>

<div>
    <a class="btn btn-info" asp-area="" asp-action="All">Back to List</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

