        <label asp-for="FilterFromDateTime" class="control-label"></label>
        <input asp-for="FilterFromDateTime" class="form-control" placeholder="dd.MM.yyyy HH:mm" />
        <span asp-validation-for="FilterFromDateTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FilterToDateTime" class="control-label"></label>
        <input asp-for="FilterToDateTime" class="form-control" placeholder="dd.MM.yyyy HH:mm" />
        <span asp-validation-for="FilterToDateTime" class="text-danger"></span>
    </div>
